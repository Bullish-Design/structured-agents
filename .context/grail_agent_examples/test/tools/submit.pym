from grail import Input

summary: str = Input("summary")
tests_generated: int = Input("tests_generated")
tests_passing: int = Input("tests_passing")
changed_files: list[str] = Input("changed_files")
workspace_id: str | None = Input("workspace_id", default=None)

workspace_value = workspace_id or "unknown"

try:
    status = "success" if tests_passing >= tests_generated else "failed"
    result = {
        "status": status,
        "workspace_id": workspace_value,
        "changed_files": [str(path) for path in changed_files],
        "summary": str(summary),
        "details": {
            "tests_generated": int(tests_generated),
            "tests_passing": int(tests_passing),
        },
        "error": None,
    }
except Exception as exc:
    result = {
        "status": "failed",
        "workspace_id": workspace_value,
        "changed_files": [],
        "summary": "",
        "details": {},
        "error": str(exc),
    }

result
