from grail import Input

file_name: str = Input("file_name", default="notes.txt")
mode: str = Input("mode", default="l")

try:
    counts = {
        "l": 12,
        "w": 120,
        "c": 802,
    }
    count = counts.get(mode, counts["l"])
    result = {
        "file_name": file_name,
        "mode": mode,
        "count": count,
    }
except Exception as exc:
    result = {"error": str(exc)}

result
